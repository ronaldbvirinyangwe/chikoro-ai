@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap');

*{
  font-family: Outfit;
  margin:0; padding:0;
  box-sizing: border-box;
  outline: none; border:none;
  transition: all .2s linear;
}

.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding:25px;
  min-height: 70vh;
}
.container form  button {
  color: #fff;
  display: block; 
  text-decoration: none; 
  text-align: center;
  width: 100%;
  font-size: 17px;
  height: 100%; 
  padding: 12px; 
  background-color: #27ae60; 
  border: none;
  cursor: pointer;
}

.container form a:hover {
  background-color: #2ecc71; 
}
.container form input {
  width: 100%;
  padding: 12px;
  margin: 6px 0;
  box-sizing: border-box;
  border: 2px solid #000; 
  border-radius: 4px;
  background-color: #fff; 
  color: #000; 
  font-size: 16px;
}

.container form label {
  display: block;
  margin-bottom: 6px;
  font-size: 16px;
  color: #000; 
}
.content .logout-btn{
  margin-left: 900px; 
  background-color: #fff;
  border: none;
  padding: 10px 20px;
  font-size: 1rem;
  cursor: pointer;
  border-radius: 5px;
  transition: background-color 0.3s ease;
}
.content .logout-btn:hover{
  background: #2ecc71;
}

.content .open-main{
    background-color: #fff; 
    border: none; 
    font-size: 1rem;
    cursor: pointer;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    margin-left: 0px; 
}
.video-section {
  flex: 1; /* Takes up available space */
  height: 100%;
  max-width: 600px; /* Optional: set a max width for the video */
  border-radius: 10px;
  overflow: hidden;
}

.video-section iframe {
  width: 20%;
  height: 20%;
  border: none;
}
@media (max-width:600px){
  .content .logout-btn{
    margin-left: 260px;
    }
}
